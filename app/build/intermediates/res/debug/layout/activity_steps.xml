<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Main">

    <TextView
        android:id="@+id/steps_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service:"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/steps_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Steps today:"
        android:textSize="20sp"
        android:layout_below="@+id/steps_view"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/save_btn"
        android:onClick="data"
        android:layout_below="@+id/steps_today"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Service"
        android:id="@+id/service_start_btn"
        android:layout_below="@+id/save_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="startService" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Service"
        android:id="@+id/service_stop_btn"
        android:layout_below="@+id/service_start_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/service_start_btn"
        android:onClick="stopService" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sync with DB"
        android:id="@+id/sync_btn"
        android:layout_below="@+id/service_stop_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/service_stop_btn"
        android:onClick="setSync" />

</RelativeLayout><!-- From: file:/F:/Cory/Documents/Projects/LifeLineAndroid/app/src/main/res/layout/activity_steps.xml -->