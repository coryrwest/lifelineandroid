<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Water">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Bottle - 20 oz"
        android:id="@+id/water_20_btn"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="water20" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Cup - 16 oz"
        android:id="@+id/water_16_btn"
        android:layout_below="@+id/water_20_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="water16" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Med Cup - 12 oz"
        android:id="@+id/water_12_btn"
        android:layout_below="@+id/water_16_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="water12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Cup - 8 oz"
        android:id="@+id/water_8_btn"
        android:layout_below="@+id/water_12_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="water8" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/custom_oz_text"
        android:layout_below="@+id/water_8_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:inputType="number"
        android:ems="10" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/save_btn"
        android:layout_below="@+id/custom_oz_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="waterCustom" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/close_btn"
        android:layout_below="@+id/save_btn"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/save_btn"
        android:onClick="close" />


</RelativeLayout><!-- From: file:/F:/Cory/Documents/Projects/LifeLineAndroid/app/src/main/res/layout/activity_water.xml -->